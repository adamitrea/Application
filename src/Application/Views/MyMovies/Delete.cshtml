@model Application_DbAccess.MyMovie

@{
    ViewData["Title"] = "Delete";
}

<h2 id="title">Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4 id="title">Movie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Comment
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MyMovieComment)
        </dd>
        <dt>
            Rating
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MyMovieRating)
        </dd>
        <dt>
            Date Added
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Details" asp-controller="MovieSets" asp-route-id="@Model.MovieSetID">Back to List</a>
        </div>
    </form>
</div>
