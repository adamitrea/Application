@model Application.Models.MyMovie

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>MyMovie</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="MyMovieID" />
        <input type="hidden" asp-for="MovieSetID" />
        <input type="hidden" asp-for="CreationDate" />
        <input type="hidden" asp-for="MovieID" />       
        <div class="form-group">
            <label asp-for="MyMovieComment" class="col-md-2 control-label">Comment</label>
            <div class="col-md-10">
                <input asp-for="MyMovieComment" class="form-control" />
                <span asp-validation-for="MyMovieComment" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MyMovieRating" class="col-md-2 control-label">Rating</label>
            <div class="col-md-10">
                <input asp-for="MyMovieRating" class="form-control" />
                <span asp-validation-for="MyMovieRating" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Details" asp-controller="MovieSets" asp-route-id="@Model.MovieSetID" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
