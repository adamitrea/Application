@model IEnumerable<Application.Models.Movie>

    @{
        ViewData["Title"] = "Movies";
    }

    <h2>Movies</h2>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MovieIcon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MovieName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MovieYear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MovieGenre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MovieRating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MovieDescription)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MovieIcon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MovieName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MovieYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MovieGenre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MovieRating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MovieDescription)
                    </td>

                </tr>
            }
        </tbody>
    </table>
